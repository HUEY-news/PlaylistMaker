<resources>

<!-- ============================== БЛОК ИНИЦИАЛИЗАЦИИ АТРИБУТОВ ============================== -->

    <!-- GENERAL -->
    <attr name="primaryBackgroundColor"/>
    <attr name="secondaryBackgroundColor"/>
    <attr name="primaryTextColor"/>
    <attr name="secondaryTextColor"/>
    <attr name="primaryIconColor"/>
    <attr name="secondaryIconColor"/>
    <attr name="primaryButtonColor"/>
    <attr name="secondaryButtonColor"/>
    <!-- PLACEHOLDERS -->
    <attr name="placeholderEmptyError"/>
    <attr name="placeholderInternetError"/>
    <!-- BUTTONS -->
    <attr name="buttonPlay"/>
    <attr name="buttonPause"/>
    <attr name="buttonAdd"/>
    <attr name="buttonFavorite"/>

<!-- ========================================================================================== -->

    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="primaryBackgroundColor">@color/YP_Black</item>
        <item name="secondaryBackgroundColor">@color/YP_White</item>
        <item name="android:statusBarColor">@color/YP_Black</item>
        <item name="android:navigationBarColor">@color/YP_Black</item>
    </style>

    <style name="Base.Theme.PlaylistMaker.MainActivity" parent="Base.Theme.PlaylistMaker">
        <item name="primaryBackgroundColor">@color/YP_Black</item>
        <item name="primaryTextColor">@color/YP_White</item>
    </style>

    <style name="Base.Theme.PlaylistMaker.SettingsActivity" parent="Base.Theme.PlaylistMaker">
        <item name="primaryTextColor">@color/YP_White</item>
        <item name="primaryIconColor">@color/YP_White</item>
        <item name="secondaryIconColor">@color/YP_Text_Gray</item>
        <item name="primaryButtonColor">@color/YP_Blue</item>
        <item name="secondaryButtonColor">@color/YP_Blue_Light</item>
    </style>

    <style name="Base.Theme.PlaylistMaker.SearchActivity" parent="Base.Theme.PlaylistMaker">
        <item name="secondaryBackgroundColor">@color/YP_White</item>
        <item name="primaryTextColor">@color/YP_White</item>
        <item name="secondaryTextColor">@color/YP_Black</item>
        <item name="primaryIconColor">@color/YP_White</item>
        <item name="secondaryIconColor">@color/YP_Black</item>
        <item name="primaryButtonColor">@color/YP_White</item>
        <item name="secondaryButtonColor">@color/YP_Black</item>
        <item name="placeholderEmptyError">@drawable/placeholder_empty_error_dark_mode</item>
        <item name="placeholderInternetError">@drawable/placeholder_internet_error_dark_mode</item>
    </style>

    <style name="Base.Theme.PlaylistMaker.Track" parent="Base.Theme.PlaylistMaker">
        <item name="primaryTextColor">@color/YP_White</item>
        <item name="secondaryTextColor">@color/YP_White</item>
        <item name="primaryIconColor">@color/YP_White</item>
    </style>

    <style name="Base.Theme.PlaylistMaker.PlayerActivity" parent="Base.Theme.PlaylistMaker">
        <item name="buttonPlay">@drawable/ic_button_play_dark_100</item>
        <item name="buttonPause">@drawable/ic_button_pause_dark_100</item>
        <item name="buttonAdd">@drawable/ic_button_add_dark_51</item>
        <item name="buttonFavorite">@drawable/ic_button_favorite_dark_51</item>
    </style>

</resources>