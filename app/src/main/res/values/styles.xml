<?xml version="1.0" encoding="utf-8"?>
<resources>

<!-- ====================================== MAIN ACTIVITY ====================================== -->
    <style name="MainActivity">
        <!-- GENERAL OPTIONS -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MainActivity.Header">
        <!-- GENERAL OPTIONS -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">start|center</item>
        <!-- TEXT OPTIONS -->
        <item name="android:text">@string/header_main</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MainActivity.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <!-- GENERAL OPTIONS -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/main_screen_button_corner_radius</item>
        <item name="android:backgroundTint">@color/YP_White</item>
        <!-- TEXT OPTIONS -->
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/main_screen_button_text_size</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <!-- ICON OPTIONS -->
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/YP_Black</item>
    </style>

<!-- ==================================== SETTINGS ACTIVITY ==================================== -->
    <style name="SettingsActivity">
        <!-- GENERAL OPTIONS -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SettingsActivity.ImageView">
        <!-- GENERAL OPTIONS -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- ICON OPTIONS -->
        <item name="tint">?attr/primaryIconColor</item>
    </style>
        <style name="SettingsActivity.ImageView.BackButton">
            <!-- ICON OPTIONS -->
            <item name="tint">?attr/primaryTextColor</item>
        </style>

    <style name="SettingsActivity.TextView">
        <!-- GENERAL OPTIONS -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <!-- TEXT OPTIONS -->
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
    </style>
        <style name="SettingsActivity.TextView.Switch">
            <!-- ICON OPTIONS -->
            <item name="thumbTint">?attr/primaryButtonColor</item>
            <item name="trackTint">?attr/secondaryButtonColor</item>
        </style>

<!-- ===================================== SEARCH ACTIVITY ===================================== -->
    <style name="SearchActivity">
        <!-- GENERAL OPTIONS -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SearchActivity.Header">
        <!-- GENERAL OPTIONS -->
        <item name="android:background">?attr/primaryBackgroundColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <!-- TEXT OPTIONS -->
        <item name="android:text">@string/search_screen_title</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="SearchActivity.ImageButton">
        <!-- GENERAL OPTIONS -->
        <item name="android:background">?attr/primaryBackgroundColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- ICON OPTIONS -->
        <item name="tint">?attr/primaryIconColor</item>
    </style>
        <style name="SearchActivity.ImageButton.ResetButton">
            <!-- GENERAL OPTIONS -->
            <item name="android:background">?attr/secondaryBackgroundColor</item>
            <item name="android:layout_gravity">end|center</item>
            <item name="android:layout_marginHorizontal">8dp</item>
            <!-- ICON OPTIONS -->
            <item name="tint">?attr/secondaryIconColor</item>
        </style>

    <style name="SearchActivity.SearchField">
        <!-- GENERAL OPTIONS -->
        <item name="android:background">@drawable/shape_rounded_rectangle</item>
        <item name="android:textCursorDrawable">@drawable/shape_edit_text_cursor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <!-- TEXT OPTIONS -->
        <item name="android:hint">@string/search_field_hint</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textColorHint">?attr/secondaryTextColor</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <!-- ICON OPTIONS -->
        <item name="android:drawableStart">@drawable/ic_search_16</item>
        <item name="android:drawableTint">?attr/secondaryIconColor</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

<!-- ======================================= TRACK ITEM ======================================== -->
    <style name="Track">
        <!-- GENERAL OPTIONS -->
        <item name="android:background">?attr/primaryBackgroundColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Track.TextView">
        <!-- GENERAL OPTIONS -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <!-- TEXT OPTIONS -->
        <item name="android:textColor">?attr/secondaryTextColor</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">12sp</item>
    </style>
        <style name="Track.TextView.TrackName">
            <!-- TEXT OPTIONS -->
            <item name="android:textColor">?attr/primaryTextColor</item>
            <item name="android:textSize">16sp</item>
        </style>

    <style name="Track.ImageButton">
        <!-- GENERAL OPTIONS -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">8dp</item>
        <!-- ICON OPTIONS -->
        <item name="tint">?attr/primaryIconColor</item>
    </style>

<!-- ====================================== PLACEHOLDER ======================================== -->
    <style name="Placeholder">
        <!-- GENERAL OPTIONS -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Placeholder.Text">
        <!-- GENERAL OPTIONS -->
        <item name="android:gravity">center</item>
        <!-- TEXT OPTIONS -->
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="Placeholder.Button">
        <!-- GENERAL OPTIONS -->
        <item name="android:backgroundTint">?attr/primaryButtonColor</item>
        <item name="cornerRadius">54dp</item>
        <!-- TEXT OPTIONS -->
        <item name="android:text">@string/placeholder_button</item>
        <item name="android:textColor">?attr/secondaryButtonColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

<!-- ===================================== SEARCH HISTORY ====================================== -->
    <style name="SearchHistory"/>

    <style name="SearchHistory.Header">
        <!-- GENERAL OPTIONS -->
        <item name="android:gravity">center</item>
        <!-- TEXT OPTIONS -->
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SearchHistory.Button">
        <!-- GENERAL OPTIONS -->
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">?attr/primaryButtonColor</item>
        <item name="cornerRadius">54dp</item>
        <!-- TEXT OPTIONS -->
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">?attr/secondaryButtonColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

<!-- ========================================= PLAYER ========================================== -->
    <style name="Player"/>

    <style name="Player.Border">
        <!-- GENERAL OPTIONS -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Player.Artwork">
        <!-- GENERAL OPTIONS -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- ICON OPTIONS -->
        <item name="android:src">@drawable/ic_placeholder_artwork_240</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Player.Name">
        <!-- GENERAL OPTIONS -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
        <!-- TEXT OPTIONS -->
        <item name="layout_constrainedWidth">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
        <style name="Player.Name.TrackName">
            <!-- TEXT OPTIONS -->
            <item name="android:textSize">22sp</item>
            <item name="fontFamily">@font/ys_display_medium</item>
            <item name="fontWeight">400</item>
            <item name="android:textColor">?attr/secondaryBackgroundColor</item>
        </style>
        <style name="Player.Name.ArtistName">
            <!-- TEXT OPTIONS -->
            <item name="android:textSize">14sp</item>
            <item name="fontFamily">@font/ys_display_medium</item>
            <item name="fontWeight">400</item>
            <item name="android:textColor">?attr/secondaryBackgroundColor</item>
        </style>
        <style name="Player.Name.TrackTime">
            <!-- GENERAL OPTIONS -->
            <item name="layout_constraintHorizontal_bias">0.5</item>
            <!-- TEXT OPTIONS -->
            <item name="android:textSize">14sp</item>
            <item name="fontFamily">@font/ys_display_medium</item>
            <item name="fontWeight">500</item>
            <item name="android:textColor">?attr/secondaryBackgroundColor</item>
        </style>
        <style name="Player.Name.TrackInfoTitle">
            <!-- TEXT OPTIONS -->
            <item name="android:textSize">13sp</item>
            <item name="fontFamily">@font/ys_display_regular</item>
            <item name="fontWeight">400</item>
            <item name="android:textColor">@color/YP_Text_Gray</item>
        </style>
        <style name="Player.Name.TrackInfoContent">
            <!-- GENERAL OPTIONS -->
            <item name="layout_constraintHorizontal_bias">1.0</item>
            <!-- TEXT OPTIONS -->
            <item name="android:textSize">13sp</item>
            <item name="fontFamily">@font/ys_display_regular</item>
            <item name="fontWeight">400</item>
            <item name="android:textColor">?attr/secondaryBackgroundColor</item>
        </style>

    <style name="Player.Button">
        <!-- GENERAL OPTIONS -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
        <style name="Player.Button.PlayPause">
            <!-- ICON OPTIONS -->
            <item name="android:src">?attr/buttonPlay</item>
            <item name="android:background">@null</item>
            <item name="android:tint">?attr/secondaryBackgroundColor</item>
        </style>
        <style name="Player.Button.Add">
            <!-- ICON OPTIONS -->
            <item name="android:src">?attr/buttonAdd</item>
            <item name="android:background">@null</item>
        </style>
        <style name="Player.Button.Favorite">
            <!-- ICON OPTIONS -->
            <item name="android:src">?attr/buttonFavorite</item>
            <item name="android:background">@null</item>
        </style>

<!-- ======================================= NAVIGATION ======================================== -->
    <style name="style_button_back">
        <!-- GENERAL OPTIONS -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="contentDescription">@string/back_button_description</item>
        <!-- ICON OPTIONS -->
        <item name="android:src">@drawable/ic_arrow_back_24</item>
        <item name="android:background">@null</item>
        <item name="android:tint">?attr/secondaryBackgroundColor</item>
    </style>
</resources>