<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Base.Theme.PlaylistMaker.SearchActivity"
    android:background="?attr/primaryBackgroundColor"
    style="@style/SearchActivity"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <LinearLayout
        android:background="?attr/primaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/button_back"
            style="@style/SearchActivity.ImageButton"
            android:paddingVertical="16dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back_button_description" />

        <TextView
            style="@style/SearchActivity.Header" />
    </LinearLayout>

    <FrameLayout
        android:background="?attr/primaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp" >

        <EditText
            android:id="@+id/et_search_field"
            style="@style/SearchActivity.SearchField"
            android:imeOptions="actionDone"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/button_reset"
            style="@style/SearchActivity.ImageButton.ResetButton"
            android:src="@drawable/ic_clear_16"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_track_list"
            android:background="?attr/primaryBackgroundColor"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="16dp" />

        <LinearLayout
            android:id="@+id/placeholderContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/placeholderIcon"
                style="@style/Placeholder"
                android:layout_marginTop="96dp"
                tools:src="?attr/placeholderInternetError" />

            <TextView
                android:id="@+id/placeholderText"
                style="@style/Placeholder.Text"
                android:layout_marginTop="16dp"
                tools:text="@string/placeholder_internet_error" />

            <Button
                android:id="@+id/placeholderButton"
                style="@style/Placeholder.Button"
                android:layout_marginTop="24dp"
                tools:visibility="visible" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>