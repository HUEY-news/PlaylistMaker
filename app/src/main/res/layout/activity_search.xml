<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SearchActivity"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    tools:context=".SearchActivity" >

    <LinearLayout
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/button_back"
            style="@style/SearchActivity.ImageButton"
            android:paddingVertical="16dp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            style="@style/SearchActivity.Header"
            android:background="?attr/colorPrimary"
            android:paddingVertical="14dp"
            android:paddingHorizontal="24dp"
            android:text="@string/search_screen_title"
            android:textColor="?attr/colorOnSecondary" />
    </LinearLayout>

    <LinearLayout
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/search_field"
            style="@style/SearchActivity.SearchField" />

        <ImageButton
            android:id="@+id/button_clear"
            style="@style/SearchActivity.ImageButton"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/ic_clear_16"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>