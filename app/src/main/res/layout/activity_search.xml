<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Base.Theme.PlaylistMaker.SearchActivity"
    android:background="?attr/primaryBackgroundColor"
    style="@style/SearchActivity"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <LinearLayout
        android:background="?attr/primaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/button_back"
            style="@style/SearchActivity.ImageButton"
            android:paddingVertical="16dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back_button_description" />

        <TextView
            style="@style/SearchActivity.Header" />
    </LinearLayout>

    <FrameLayout
        android:background="?attr/primaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp" >

        <EditText
            android:id="@+id/et_search_field"
            style="@style/SearchActivity.SearchField"
            android:imeOptions="actionDone"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/button_reset"
            style="@style/SearchActivity.ImageButton.ResetButton"
            android:src="@drawable/ic_clear_16"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_track_list"
            android:background="?attr/primaryBackgroundColor"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="16dp" />

        <LinearLayout
            android:id="@+id/placeholderContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/placeholderIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@drawable/ic_internet_error_light_mode"
                android:layout_marginTop="96dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/placeholderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Проблемы со связью\n\nЗагрузка не удалась. Проверьте подключение к интернету"
                android:textColor="@color/YP_Black"
                android:textSize="19sp"
                android:fontFamily="@font/ys_display_medium"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/placeholderButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/YP_Black"
                android:textColor="@color/YP_White"
                app:cornerRadius="54dp"
                tools:text="Обновить"
                android:textAllCaps="false"
                android:letterSpacing="0" />

        </LinearLayout>


    </FrameLayout>


</LinearLayout>