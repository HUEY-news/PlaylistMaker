<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Base.Theme.PlaylistMaker.Settings"
    android:background="?attr/primaryBackgroundColor"
    style="@style/SettingsActivity"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/regular_border_medium" >
        
        <LinearLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:layout_gravity="center" >
            <ImageView
                android:id="@+id/backButton"
                style="@style/ImageView.BackButton"
                android:layout_gravity="center"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_arrow_back_24"
                android:foreground="?attr/selectableItemBackground" />
            <TextView
                style="@style/TextView"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/button_settings"
                android:fontFamily="@font/ys_display_medium"
                android:textFontWeight="500"
                android:textSize="24sp" />
        </LinearLayout>

    <FrameLayout
        android:id="@+id/nightThemeContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_screen_frame_height"
        android:layout_marginTop="24dp" >

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/themeSwitcher"
            style="@style/TextView.Switch"
            android:layout_width="match_parent"
            android:text="@string/dark_theme" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/shareContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_screen_frame_height" >
        <TextView
            style="@style/TextView"
            android:text="@string/share_app" />
        <ImageView
            style="@style/ImageView"
            android:layout_gravity="end|center"
            android:src="@drawable/ic_share_24"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/supportContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_screen_frame_height" >
        <TextView
            style="@style/TextView"
            android:text="@string/write_to_user_support" />
        <ImageView
            style="@style/ImageView"
            android:layout_gravity="end|center"
            android:src="@drawable/ic_support_24"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/agreementContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_screen_frame_height" >
        <TextView
            style="@style/TextView"
            android:text="@string/user_agreement" />
        <ImageView
            style="@style/ImageView"
            android:layout_gravity="end|center"
            android:src="@drawable/ic_arrow_forward_24"/>
    </FrameLayout>

</LinearLayout>