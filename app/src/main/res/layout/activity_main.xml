<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/YP_Blue"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="24dp"
    android:paddingBottom="28dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/YP_White"
        android:gravity="center"
        android:text="@string/search"
        android:textAllCaps="false"
        android:textColor="@color/YP_Black"
        android:textSize="@dimen/size_special_header"

        app:cornerRadius="@dimen/radius_medium"
        app:icon="@drawable/ic_search"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/margin_small"
        app:iconTint="@color/YP_Black" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="16dp"
        android:layout_weight="1"
        android:backgroundTint="@color/YP_White"
        android:gravity="center"
        android:text="@string/library"
        android:textAllCaps="false"
        android:textColor="@color/YP_Black"
        android:textSize="@dimen/size_special_header"

        app:cornerRadius="@dimen/radius_medium"
        app:icon="@drawable/ic_library"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/margin_small"
        app:iconTint="@color/YP_Black" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/YP_White"
        android:gravity="center"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textColor="@color/YP_Black"
        android:textSize="@dimen/size_special_header"

        app:cornerRadius="@dimen/radius_medium"
        app:icon="@drawable/ic_settings"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/margin_small"
        app:iconTint="@color/YP_Black" />

</LinearLayout>