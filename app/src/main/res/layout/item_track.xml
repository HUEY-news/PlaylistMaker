<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Base.Theme.PlaylistMaker.Track"
    style="@style/Track"
    android:orientation="horizontal"
    android:paddingVertical="8dp" >

    <ImageView
        android:id="@+id/IV_artwork"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/TV_track_name"
            style="@style/Track.TextView.TrackName"
            tools:text="Smells Like Teen Spirit" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TV_artist_name"
                style="@style/Track.TextView"
                tools:text="Nirvana" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dot_16"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/TV_track_time"
                style="@style/Track.TextView"
                tools:text="5:01" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        style="@style/Track.ImageButton"
        android:src="@drawable/ic_arrow_forward_24" />

</LinearLayout>